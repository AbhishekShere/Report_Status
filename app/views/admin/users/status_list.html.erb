<html>
<head>
<style>
table,th,td
{
border: 1px solid black;
}
th
{
font-size: 20px;border-radius: 5px;
}
</style>
</head>
<body>
<b>Status Index of  </b><span style="color:darkolivegreen;font-weight:bold;font-size:30px;"><%= @user.fname %></span>
<p>
  Download:
  <%= link_to "CSV", admin_status_path(format: "csv") %> |
  <%= link_to "Excel", admin_status_path(format: "xls") %>
</p>
<div class="status_content">
<br>
<table  border=1px solid black;>
<th>Status Id</th>
<th>Subject</th>
<th>Date</th>
<th>In Time</th>
<th>Out Time</th>
<th>Break Time</th>
<th>Meeting Time</th>
<th>Total Working Hours</th>
<th>Coordinate</th>
<th>Text</th>
<%  @status.each do |status| %>
  <tr>
    <td><%= link_to status.id, admin_status_path(status.id) %></td>
    <td><%= status.subject %></td>
    <td><%= status.date %></td>
    <td><%= status.intime %></td>
    <td><%= status.outtime %></td>
    <td><%= status.breaktime %> hr</td>
    <td><%= status.meetingtime %> hr</td>
    <td><%= status.workinghours %> hr</td>
    <td><%= status.coordinate %></td>
    <td><%= status.text %></td>
  </tr>
<% end %>
</table>
</div>
</body>
</html>
